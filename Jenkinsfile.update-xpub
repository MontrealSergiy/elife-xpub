elifeUpdatePipeline(
    { commit ->
        sh "sed -i -e 's/XPUB_VERSION=.*/XPUB_VERSION=${commit}/' .env"
    },
    {
        def xpubCommit = sh(script: "cat .env | grep XPUB_VERSION", returnStdout: true)
        return "Updated xpub to ${xpubCommit}"
    },
    'update_xpub/',
    false,
    'develop',
    true
)
